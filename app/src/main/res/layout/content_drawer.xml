<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="60dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ddlogo"/>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/ashGrey"
        android:layout_below="@id/iv_logo"
        android:text="Home"
        android:gravity="center_vertical"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="5dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_below="@id/iv_logo"
        android:src="@drawable/line"/>

    <TextView
        android:id="@+id/tv_cart"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/ashGrey"
        android:layout_below="@id/tv_home"
        android:text="My Cart"
        android:gravity="center_vertical"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="5dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_below="@id/tv_home"
        android:src="@drawable/line"/>

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/ashGrey"
        android:layout_below="@id/tv_cart"
        android:text="My Profile"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="5dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_below="@id/tv_cart"
        android:src="@drawable/line"/>

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/ashGrey"
        android:layout_below="@id/tv_profile"
        android:text="Notification"
        android:gravity="center_vertical"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/line4"
        android:layout_width="5dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_below="@id/tv_profile"
        android:src="@drawable/line"/>

    <TextView
        android:id="@+id/tv_feed"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/ashGrey"
        android:layout_below="@id/tv_notification"
        android:text="Share Feedback"
        android:gravity="center_vertical"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:text="Logout"
        android:textColor="@color/ashGrey"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/setting_nav"/>

</RelativeLayout>