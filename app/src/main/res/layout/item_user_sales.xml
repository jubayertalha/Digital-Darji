<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    app:cardElevation="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sales_dp"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:gravity="center_vertical"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:padding="@dimen/dimen_10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_sales_name"
                style="@style/PoppinsSemiBold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Mashrafee Mortuza" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:layout_weight="1">

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    app:srb_fillColor="@color/lightOrange"
                    app:srb_numberOfStars="5"
                    app:srb_rating="1"
                    app:srb_starSize="10dp"
                    app:srb_stepSize="1" />

                <TextView
                    android:id="@+id/tv_sales_price"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:text="TK 123" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_sales_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cyanBlue"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tv_sales_count"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="1" />
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="+" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sales_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cyanBlue"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Add to Cart"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>